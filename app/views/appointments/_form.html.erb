<%= form_for(appointment) do |f| %>
  <div class='form-group'>
    <%= f.label :date, class: 'lead' %>
    <%= f.date_field :date, class: 'lead' %>
  </div>
  <div class='form-group'>
    <%= f.label :start_time, class: 'lead' %>
    <%= f.time_field :start_time, class: 'lead' %>
  </div>
  <div class='form-group'>
    <%= f.submit 'Create Appointment', class: 'btn btn-success btn-large' %>
  </div>

<% end %>

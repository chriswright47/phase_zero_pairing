<h2>Please sign in:</h2>
<br>
<div class='col-md-4'>
  <%= form_tag '/sessions' do %>
    <div class='form-group pull-right'>
      <%= label_tag :email, 'Email', class: 'lead' %>
      <%= text_field_tag :email, '', class: 'lead' %>
    </div>
    <div class='clearfix'></div>
    <div class='form-group pull-right'>
      <%= label_tag :password, 'Password', class: 'lead' %>
      <%= password_field_tag :password, '', class: 'lead' %>
    </div>
    <div class='clearfix'></div>
    <div class='form-group pull-right'>
      <%= submit_tag 'Sign In', class: 'btn btn-primary btn-lg' %>
    </div>

  <% end %>
</div>

<%= form_for(user) do |f| %>
  <div class='form-group right'>
    <%= f.label :first_name, class: 'lead' %>
    <%= f.text_field :name, placeholder: ' first name', class: 'lead' %>
  </div>
  <div class='form-group right'>
    <%= f.label :email, class: 'lead' %>
    <%= f.text_field :email, placeholder: ' email@email.com', class: 'lead' %>
  </div>
  <div class='form-group right'>
    <%= f.label :password, class: 'lead' %>
    <%= f.password_field :password, class: 'lead' %>
  </div>
  <div class='form-group right'>
    <%= f.label :confirm_password, class: 'lead' %>
    <%= f.password_field :password_confirmation, class: 'lead' %>
  </div>
  <div class='form-group right'>
    <%= f.label :teacher, 'I am a teacher and will lead pairings', class: 'lead' %>
    <%= f.check_box :teacher, class: 'lead' %>
  </div>

  <div class='form-group right'>
    <%= f.submit class: 'btn btn-primary btn-lg' %>
  </div>
  <% end %>